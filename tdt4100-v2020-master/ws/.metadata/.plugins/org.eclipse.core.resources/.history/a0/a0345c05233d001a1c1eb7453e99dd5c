package stateandbehavior;

public class Digit {
	
	private int base;
	private int value;
	
	
	public int getValue() { // get nu
		return value;
	}
	
	public boolean increment() {
		if (++value >= base) {
			return true;
		} else {
			return false;
		}
	}
	
	public int getBase() {
		return base;
	}
	
	public String toString() {
		return "Base: " + base + "\nReal value is: " + v;
	}

	public static void main(String arg[]) {
		Digit number = new Digit();
		number.base = 8;
		number.value = 3;
	}
}
